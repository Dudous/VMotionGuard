<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/homeAdmin.css">
    <link rel="stylesheet" href="/css/setMode.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <script src="/js/setMode.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Home admin</title>
</head>
<body class='modeAtual'>

    <header>

        <div class="navegacao">
            <div class="collapse" id="navbarToggleExternalContent">
                <div class="bg-dark p-4 navegar">
                    <a href="/minhaConta/<%=id%>" class="text-white h4 ancora">Minha conta</a>
                    <form action="/allCars/<%=login.IDUser%>">
                        <button id="carros" ><a class="text-white h4 carros" >Carros</a></button>
                    </form>
                    <a href="/" class="text-white h4 ancora" style="margin-top: 5px;" >Logout</a>
                    <div class="modeCenter">
                        <div class="mode">
                          <img id="modeToggle" onclick="toggleDarkMode()" class="setModeIcon" src="/img/moon.png" alt="Toggle Dark Mode">
                        </div>
                    </div>
                  <span class="text-muted">Toggleable via the navbar brand.</span>
                </div>
              </div>
              <nav class="navbar navbar-dark bg-dark custom-shadow ">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </nav>
        </div>

        <div class="content" >

            <div class="modeCenter-mobile">
                <div class="mode">
                  <img id="modeToggle" onclick="toggleDarkMode()" class="setModeIcon" src="/img/moon.png" alt="Toggle Dark Mode">
                </div>
            </div>

            <p class="hello">OLÁ, ADMINISTRADOR! </p>
            <p class="title-gerenciamento">GERENCIAMENTO DE <br> USUÁRIOS</p>
        </div>


        <input type="text" id="searchBar" placeholder="Procure aqui..." onkeyup="searchFunction()">
    </header>
    <main id="userList">
        <div class="container" >
    
            <% for(let i = 0; i < users.length; i++) {%>
    
                <form action="/informacoesUsers/<%=users[i].IDUser%>/<%=login.IDUser%>" method="get">
                     <button class="admin-cards-button" >
                         <div class="cards-admin">
                             <div class="card-header">
                                 <img class="icon" src="/img/user.png" alt="">
                                 <h1 style="margin: 7px;" > <%=users[i].Name%></h1>
                                   <img id="redirecionar" class="icon" src="/img/avançar-light.png" alt="">
                                </div>
                            </div>
                        </button>
                    </form>
    
            <% } %>
        </div>

    </main>

    <hr>

    <footer>
        <a href="/allCars/<%=id%>"><img class="icon" src="/img/car.png" alt=""></a>
        <a href="#"><img class="icon" src="/img/notification.png" alt=""></a>
        <a href="#"><img class="icon" src="/img/home.png" alt=""></a>
        <a href="/minhaConta/<%=id %>"><img class="icon" src="/img/user.png" alt=""></a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        function searchFunction() {
        var input, filter, userList, cards, h1, i, txtValue;
        input = document.getElementById('searchBar');
        filter = input.value.toLowerCase();
        userList = document.getElementById("userList");
        cards = userList.getElementsByClassName('cards-admin');
        
        // Esconde todos os cards
        for (i = 0; i < cards.length; i++) {
            cards[i].style.display = "none";
        }

        for (i = 0; i < cards.length; i++) {
            h1 = cards[i].getElementsByTagName("h1")[0]; //retorna só o primerio elemento h1 que encontrar
            txtValue = h1.textContent || h1.innerText;
            if (txtValue.toLowerCase().indexOf(filter) > -1) { // retona -1 se nn for enconytrado, o indexof retorna a posição de um termo em um  array
                cards[i].style.display = "block";
            }
        }
    }

    </script>
</body>
</html>