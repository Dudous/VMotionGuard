<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/informacoesUser.css">
    <link rel="stylesheet" href="/css/setMode.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <script src="/js/setMode.js" defer></script>
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<title>Usuário</title>
</head>
<body class='modeAtual'>

    <header>

        <div class="navegacao">
            <div class="collapse" id="navbarToggleExternalContent">
                <div class="bg-dark p-4 navegar">
                    <a href="/minhaConta/<%=admin%>" class="text-white h4 ancora">Minha conta</a>
                    <a href="/homePageAdmin/<%=admin %>" class="text-white h4 ancora">home</a>          
                  <span class="text-muted">Toggleable via the navbar brand.</span>
                </div>
              </div>
              <nav class="navbar navbar-dark bg-dark custom-shadow ">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </nav>
        </div>

        <div class="content" >
            <p class="title-gerenciamento">GERENCIAMENTO DE <br> USUÁRIOS</p>
        </div>
    </header>
    <main id="userList">

        <form action="/informacoesUsers/<%=currentUser.IDUser%>/<%=admin%>" method="post" class="row g-3">

                <div class="col-md-6">
                  <label for="inputEmail4" class="form-label">ID Usuário</label>
                  <input type="text" class="form-control" id="userId" value="<%=currentUser.IDUser %>" readonly >
                </div>
                <div class="col-md-6">
                  <label for="inputPassword4" class="form-label">Nome</label>
                  <input type="text" class="form-control" id="userName" value="<%=currentUser.Name%>" readonly >
                </div>
                <div class="col-12">
                  <label for="inputAddress" class="form-label">Email</label>
                  <input type="text" class="form-control" id="userEmail" value="<%=currentUser.Email %>"  readonly >
                </div>

                <div class="col-12">
                    <label for="inputAddress" class="form-label">Telefone</label>
                    <input type="text" class="form-control" id="userTel" value="<%=currentUser.Telefone %>"  readonly >
                  </div>


                <div class="col-12">
                    <label for="inputAddress" class="form-label">Permissão</label>
                    <input type="text" class="form-control" id="userAllow" name="userAllow" value="<%= currentUser.IsAdmin == 1? "Administrador" : "Usuário" %>" readonly >
                </div>

                <div class="col-12 controler">
                    <input class="btn btn-primary" value="Alterar Permissão" onclick="updateUser()" style="width: 260px;" readonly/>
                    <a href="/homePageAdmin/<%=admin%>" class="btn btn-danger">Cancelar</a>
                    <input class="btn btn-primary" value="Pronto" type="submit"/>
                </div>
        </form>

    </main>

    <hr>

    <footer>
        <a href="/allCars/<%=admin%>"><img class="icon" src="/img/car.png" alt=""></a>
        <a href="#"><img class="icon" src="/img/notification.png" alt=""></a>
        <a href="/homePageAdmin/<%=admin%>"><img class="icon" src="/img/home.png" alt=""></a>
        <a href="/minhaConta/<%=admin%>" > <img class="icon" src="/img/user.png" alt=""></a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
         const allow = document.getElementById("userAllow");
         const updateUser = () =>
         {
            if(allow.value == "Usuário")
                allow.value = "Administrador"
            else
                allow.value = "Usuário"
         }
    </script>

</body>
</html>