<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/adminCars.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="/css/setMode.css">
    <script src="/js/setMode.js"></script>
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<title>Carros</title>
</head>
<body class='modeAtual'>

    <header>

        <div class="navegacao">
            <div class="collapse" id="navbarToggleExternalContent">
                <div class="bg-dark p-4 navegar">
                    <a href="/minhaConta/<%=id%>" class="text-white h4 ancora">Minha conta</a>
                    <form action="/homePageAdmin/<%=id%>">
                        <button id="carros" ><a class="text-white h4 carros" >Voltar ao menu</a></button>
                    </form>
                    <a href="/" class="text-white h4 ancora" style="margin-top: 5px;" >Logout</a>
                  <span class="text-muted">Toggleable via the navbar brand.</span>
                </div>
              </div>
              <nav class="navbar navbar-dark bg-dark">
                <div class="container-fluid">
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                </div>
              </nav>
        </div>

        <div class="content" >
            <p class="hello">OL√Å, ADMINISTRADOR! </p>
            <p class="title-gerenciamento">GERENCIAMENTO DE <br> CARROS</p>
        </div>


        <input type="text" id="searchBar" placeholder="Procure aqui..." onkeyup="searchFunction()">
    </header>
    <main id="userList">

        <% for(let i = 0; i < vehicles.length; i++) { %>

                 <div class="cards-admin">
                     <div class="card-header">
                         <img class="icon" src="/img/car.png" alt="">
                         <h1 style="margin: 7px;"> <%= vehicles[i].Model%></h1>
                     </div>
                         <div class="card-content">
                             <h1> Placa: <%= vehicles[i].Plate %></h1>
                             <h1> Ano: <%=  vehicles[i].Year %></h1>
                             <h1> Dono: <%=  users[vehicles[i].IDUser -1].Name%></h1>
                         </div>
                </div>

        <% } %>

    </main>

    <hr>

    <footer>
        <a href="#"><img class="icon" src="/img/car.png" alt=""></a>
        <a href="#"><img class="icon" src="/img/notification.png" alt=""></a>
        <a href="/homePageAdmin/<%=id%> "><img class="icon" src="/img/home.png" alt=""></a>
        <a href="/minhaConta/<%=id %>"><img class="icon" src="/img/user.png" alt=""></a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        function searchFunction() {
            var input, filter, userList, cards, card, h1s, i, j, txtValue;
            input = document.getElementById('searchBar');
            filter = input.value.toLowerCase();
            userList = document.getElementById("userList");
            cards = userList.getElementsByClassName('cards-admin');
    
 
            for (i = 0; i < cards.length; i++) {
                cards[i].style.display = "none";
            }

            for (i = 0; i < cards.length; i++) {
                card = cards[i];
                h1s = card.getElementsByTagName("h1");
            
                for (j = 0; j < h1s.length; j++) {
                    txtValue = h1s[j].textContent || h1s[j].innerText;
                    if (txtValue.toLowerCase().indexOf(filter) > -1) {
                        card.style.display = "block";
                        break;
                    }
                }
            }
}

    </script>
</body>
</html>